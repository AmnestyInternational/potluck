<div class="photo-browser container-fluid">
    <div class="row-fluid">
        <div class="span12">

            <div class="row">
                <div class="span12">
                    <h1>{{theme.title}}</h1>
                    <p>{{theme.description}}</p>
                </div>
            </div>

            {{#submissions}}
            {{#if colStart}}
            <div class="row thumb">
            {{/if}}

                <div class="span4">
                    <a href="/submissions/{{id}}"><img src="{{thumb_url}}"></a>
                    <h5>Submitted: {{contact_name}}</h5>
                    <small>{{caption}}</small>
                </div>

            {{#if colEnd}}
            </div>
            {{/if}}
            {{/submissions}}
        </div><!-- /.span12-->
    </div><!-- /.row-fluid -->
</div><!-- /.submission-form" -->

